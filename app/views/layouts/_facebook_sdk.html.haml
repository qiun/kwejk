#fb-root
:javascript
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '#{ENV['FB_APP_ID']}',
      xfbml      : true,
      version    : 'v2.0'
    });
    var fb_update = function(url, html_element) {
      var get = $.get(url+'/fb_update', function(data){
        if(data && data.response){
          console.log(data.responseText);
        } else {
          console.log(data);
        }
      });    
    }

    FB.Event.subscribe('edge.create', fb_update);
    FB.Event.subscribe('edge.remove', fb_update);

    FB.Event.subscribe('comment.create', fb_update);
    FB.Event.subscribe('comment.remove', fb_update);

  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
