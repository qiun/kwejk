!!!
%html
  %head
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}
    %title= content_for?(:title) ? yield(:title) : "Empatia"
    %meta{:content => content_for?(:description) ? yield(:description) : "Daily funny pictures.", :name => "description"}
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = auto_discovery_link_tag :rss, "posts/feed.rss"
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-51097563-1', 'empatia.herokuapp.com');
      ga('send', 'pageview');
    = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    = render 'layouts/facebook_sdk'
    .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle{:type => "button", "data-toggle" => "collapse", "data-target" => ".navbar-collapse"}
            %span.sr-only="Toggle navigation"
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"} 
            ="Empatia"
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li
              = link_to 'RSS', feed_posts_url(format: "rss") 
          %ul.nav.navbar-nav.navbar-right
            = render 'layouts/navigation'
    .containaer
      = render 'layouts/messages'
      = yield
