- if posts.empty?
  = render 'posts/empty'
.col-md-8.col-md-offset-2
  - posts.each do |post|
    .post
      %h3
        = post.title
        -if user_signed_in? and current_user.owner? post and post.accepted == false
          %span{class: 'label label-warning pull-right'}= "Waiting to accepted"
      = link_to( image_tag( post.picture.url(:default),class: 'img-responsive center-block', alt: post.description), post, class: 'center-block post-url')
      - if user_signed_in? and current_user.owner? post
        .btn-group.btn-group-justified
          = link_to 'Edit', edit_post_path(post), class: 'btn btn-primary'
          = link_to 'Delete', post, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'
      - if admin_signed_in?
        .btn-group.btn-group-justified
          - if post.accepted == false
            = link_to 'Accept', mark_accepted_post_path(post), class: 'btn btn-primary'
          - else
            = link_to 'Remove accept!', mark_not_accepted_post_path(post), class: 'btn btn-danger'
          = link_to 'Edit', edit_post_path(post), class: 'btn btn-primary'
          = link_to 'Delete', post, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'
      = like_button(ENV['FB_APP_ID'], href: post_url(post), share: true)
  .paginate
    = will_paginate posts,:page_links => false , renderer: BootstrapPagination::Rails
